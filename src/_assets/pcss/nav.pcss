nav {
  width: 100%;
  height: 5rem;
  background-color: #2B3E50;
  padding-left: 30px;
  padding-right: 10px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.logo {
  display: none;
  color: #fff;
  font-family: inherit;
  font-size: 2rem;
  text-decoration: none;
}
.logo:hover,
.logo:focus {
  background-color: white;
  color: #2B3E50;
  padding: 1.4rem 0;
}

@media only screen and (min-width: 768px)  {
  .logo {
    display: inline-block;
  }
}

.nav-links {
  list-style: none;
  display: flex;
}

.nav-item a {
  display: inline-block;
  padding: 10px 15px;
  text-decoration: none;
  color: white;
}

.nav-item a:hover,
.nav-item a:focus {
  background-color: white;
  color: #2B3E50;
}

.logo img {
  width: 175px;
  vertical-align: middle;
}
