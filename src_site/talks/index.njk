---
layout: base.njk
title: Talks
---
<main>
  <h1 class="code-title">Talk is cheap</h1>
  <section class="cards">
    {% for code in talksData.talks %}
      <article>
        {% if code.title %}
          <header>
            <h2 class="card-title">{{ code.title | safe }}</h2>
          </header>
        {% endif %}
        <div class="card-body">
          <figure>
          {% if code.videoId %}
            <lite-youtube videoid="{{ code.videoId }}"  playlabel="Play Video: {{ code.title }}"></lite-youtube>
          {% endif %}
            <figcaption>{{ code.description }}</figcaption>
          </figure>
        </div>
        <footer>
          <nav>
            <ul class="nav-links">
              {% if code.slides %}
                <li class="nav-item"><a class="btn" target="_blank" href="{{ code.slides }}" style="padding: 1rem 2rem;">Slides</a></li>
              {% endif %}
              {% if code.videoId %}
              <li class="nav-item"><a class="btn" target="_blank" rel="noopener noreferer" href="https://youtube.com/watch?v={{ code.videoId }}" style="padding: 1rem 2rem;">Video</a></li>
              {% endif %}
            </ul>
          </nav>
        </footer>
      </article>
    {% endfor %}
  </section>
  <script type="module" src="/static/js/lite-youtube-embed.js"></script>
  <script type="module" id="only-for-partials">document.title =  "{{ metadata.title }}{% if title %} - {{ title }}{% endif %}";</script>
</main>
